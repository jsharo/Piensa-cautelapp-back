// Prisma 5/7 compatible schema
// No enums per user request

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id_usuario         Int      @id @default(autoincrement())
  nombre             String
  email              String   @unique
  email_recuperacion String?  @unique // Email secundario para recuperación de contraseña
  contrasena         String
  imagen             String?  // optional

  // FK
  id_rol       Int
  rol          Roles    @relation(fields: [id_rol], references: [id_rol])

  // m:n with AdultoMayor via join table
  usuariosAdultoMayor UsuarioAdultoMayor[]

  // Relación con grupos compartidos
  sharedGroupMemberships SharedGroupMember[]

  @@map("Usuario")
}

model AdultoMayor {
  id_adulto      Int       @id @default(autoincrement())
  nombre         String
  fecha_nacimiento DateTime
  direccion      String

  // FK to Dispositivo
  id_dispositivo String?
  dispositivo    Dispositivo? @relation(fields: [id_dispositivo], references: [id_dispositivo])

  notificaciones Notificaciones[]
  usuariosAdultoMayor UsuarioAdultoMayor[]
  sharedInGroups SharedGroupDevice[] // Grupos que tienen acceso a este dispositivo

  @@map("AdultoMayor")
}

model Dispositivo {
  id_dispositivo String   @id // ID del dispositivo enviado por ESP32 (ej: "CA-001", "CA-002")
  online_status  Boolean  @default(false) // Estado de conexión online/offline
  last_seen      DateTime? // Última vez que se conectó
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  adultos AdultoMayor[]

  @@map("Dispositivo")
}

model Notificaciones {
  id_notificacion Int      @id @default(autoincrement())
  id_adulto       Int
  adulto          AdultoMayor @relation(fields: [id_adulto], references: [id_adulto])

  tipo           String
  fecha_hora     DateTime
  pulso          Int?
  mensaje        String?

  @@map("Notificaciones")
}

model Roles {
  id_rol      Int     @id @default(autoincrement())
  nombre_rol  String
  descripcion String?

  usuarios Usuario[]
  rolesPermisos RolesPermisos[]

  @@map("Roles")
}

model Permisos {
  id_permiso     Int    @id @default(autoincrement())
  nombre_permiso String
  descripcion    String?

  rolesPermisos RolesPermisos[]

  @@map("Permisos")
}

model RolesPermisos {
  id_rol     Int
  id_permiso Int

  rol     Roles    @relation(fields: [id_rol], references: [id_rol])
  permiso Permisos @relation(fields: [id_permiso], references: [id_permiso])

  @@id([id_rol, id_permiso])
  @@map("RolesPermisos")
}

model UsuarioAdultoMayor {
  id_usuario Int
  id_adulto  Int

  usuario Usuario     @relation(fields: [id_usuario], references: [id_usuario])
  adulto  AdultoMayor @relation(fields: [id_adulto], references: [id_adulto])

  @@id([id_usuario, id_adulto])
  @@map("Usuario-AdultoMayor")
}

model PasswordReset {
  email     String    @id
  code      String
  expiresAt DateTime

  @@map("PasswordReset")
}

// --- INVITACIÓN POR ENLACE/CÓDIGO ---
model SharedGroup {
  id              Int      @id @default(autoincrement())
  name            String?
  code            String   @unique // Código de invitación único
  created_by      Int      // FK a Usuario
  created_at      DateTime @default(now())

  // Relaciones
  members         SharedGroupMember[]
  sharedDevices   SharedGroupDevice[] // Dispositivos compartidos en este grupo

  @@map("SharedGroup")
}

model SharedGroupMember {
  id          Int      @id @default(autoincrement())
  group_id    Int
  user_id     Int
  invited_by  Int?     // FK a Usuario (quién invitó a este miembro, null si es el creador)
  joined_at   DateTime @default(now())

  // Relaciones
  group       SharedGroup @relation(fields: [group_id], references: [id], onDelete: Cascade)
  user        Usuario     @relation(fields: [user_id], references: [id_usuario], onDelete: Cascade)

  @@unique([group_id, user_id])
  @@map("SharedGroupMember")
}

// Tabla intermedia: qué dispositivos (AdultoMayor) están compartidos en cada grupo
model SharedGroupDevice {
  id              Int      @id @default(autoincrement())
  group_id        Int
  adulto_id       Int      // FK a AdultoMayor (quien tiene el dispositivo)
  shared_by       Int      // FK a Usuario (quién compartió)
  shared_at       DateTime @default(now())

  // Relaciones
  group           SharedGroup  @relation(fields: [group_id], references: [id], onDelete: Cascade)
  adulto          AdultoMayor  @relation(fields: [adulto_id], references: [id_adulto], onDelete: Cascade)

  @@unique([group_id, adulto_id]) // Un dispositivo solo puede compartirse una vez por grupo
  @@map("SharedGroupDevice")
}


